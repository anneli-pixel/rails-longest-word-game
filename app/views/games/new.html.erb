<h1>New Game</h1>


<ul class="flex-letter-container">
<% @letters.each do |letter| %>
  <li class="flex-letter-item"><%= letter %></li>
<% end %>
</ul>

<form action="/score" method="post">
  <label for="word">What is the longest word you can find?</label>
  <div class="flex-input-container">
    <input type="text" name="word" id="flex-input-text" >
    <input type="submit" value="Play" id="flex-input-button">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
</form>
